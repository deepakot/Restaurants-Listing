<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_view"
    android:background="#fff"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/movie_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:clickable="true"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/restImage"
        android:layout_width="150dp"
        android:layout_height="46dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:padding="1dp"
        android:background="#000"
        android:src="@drawable/logo"
        />
    <TextView
        android:text="restName"
        android:id="@+id/restName"
        android:textColor="#222222"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/restImage"
        android:layout_toLeftOf="@+id/like"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="3 offers"
        android:id="@+id/offers"
        android:layout_below="@id/restName"
        android:layout_toRightOf="@+id/restImage"
        android:layout_width="match_parent"
        android:layout_toLeftOf="@+id/like"
        android:layout_height="wrap_content" />

   <ImageView
        android:id="@+id/like"
        android:layout_width="25dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/heart_on"
        android:layout_marginTop="5dp"
        android:layout_height="20dp"/>
    <ImageView
        android:text="distance"
        android:id="@+id/marker"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/restImage"
        android:src="@drawable/marker"
        android:layout_width="32dp"
        android:layout_height="32dp" />
    <TextView
        android:text="distance"
        android:id="@+id/distance"
        android:layout_marginTop="4dp"
        android:textSize="16dp"
        android:layout_toRightOf="@+id/marker"
        android:layout_toLeftOf="@+id/category"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@id/restImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:text="Categories"
        android:id="@+id/category"
        android:layout_alignParentRight="true"
        android:layout_below="@id/restImage"
        android:textColor="#fff"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:theme="@style/MyButton"
        android:layout_height="36dp" />
</RelativeLayout>
</android.support.v7.widget.CardView>
